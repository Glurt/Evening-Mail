<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_article_title"
            style="@style/Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_title"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/textView_article_subheading"
            style="@style/Subheading"
            android:layout_marginTop="@dimen/text_margin"
            android:text="@string/sample_subheading" />

        <TextView
            android:id="@+id/textView_article_text1"
            style="@style/Content"
            android:layout_marginTop="@dimen/text_margin"
            android:text="@string/sample_content"
            android:textStyle="italic" />

        <com.mopub.mobileads.MoPubView
            android:id="@+id/adview_middle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/textView_article_text2"
            style="@style/Content"
            android:text="@string/sample_content" />

        <TextView
            android:id="@+id/textView_pubDate"
            style="@style/Pubdate"
            android:text="Last updated: Today" />

    </LinearLayout>

    <include layout="@layout/progressbar" />

    <com.mopub.mobileads.MoPubView
        android:id="@+id/adview_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/black" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <LinearLayout
        android:id="@+id/linearLayout_card_root"
        style="@style/Widget.CardContentPadded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_article_title"
            style="@style/Headline.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctors hail 'Spectacular' cancer treatment breakthrough." />

        <TextView
            android:id="@+id/textView_article_subtitle"
            style="@style/Subheading.Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin_gap"
            android:autoLink="web"
            android:text="Doctors at some hospital you've never heard of have come up with a new treatment for cancer that won't be introduced into standard practise until 2020" />

        <TextView
            android:id="@+id/textView_article_pubDate"
            style="@style/Pubdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin_gap"
            android:text="Last Updated:" />

    </LinearLayout>

</android.support.v7.widget.CardView>
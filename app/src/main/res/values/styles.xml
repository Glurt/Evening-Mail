<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_primary_accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme" />

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/app_primary_dark</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.CardContentPadded" parent="Widget.CardContent">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
    </style>

    <!-- Text Styles -->
    <!-- Headline -->
    <style name="Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/text_headline_size</item>
        <item name="fontPath">@string/font_roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:autoLink">web</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textColorLink">@color/app_primary</item>
    </style>

    <style name="Headline.Card" parent="Headline">
        <!-- TODO - Size for Headline card -->
        <item name="android:textSize">@dimen/text_headline_card_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorLink">@color/app_primary</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <!-- Content -->
    <style name="Content" parent="TextAppearance.AppCompat.Display4">
        <item name="android:textSize">@dimen/text_content_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoLink">web|email</item>
        <item name="android:textIsSelectable">true</item>
        <item name="fontPath">@string/font_roboto_light</item>
        <item name="android:textColorLink">@color/app_primary</item>
    </style>

    <!-- Subheading -->
    <style name="Subheading" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/text_content_size</item>
        <item name="fontPath">@string/font_roboto_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:autoLink">web|email</item>
        <item name="android:textColorLink">@color/app_primary</item>
    </style>

    <style name="Subheading.Card" parent="Content">
        <!-- TODO -->
        <item name="android:textIsSelectable">false</item>
    </style>

    <!-- Pub Date -->
    <style name="Pubdate" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_pubdate_size</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

</resources>
